<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/widget_my_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        tools:targetApi="o">
    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/part_list_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/part_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toRightOf="@id/part_list_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/part_list_num"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            tools:text="[myList] High Hopes"
    />
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/part_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toRightOf="@id/part_list_image"
            app:layout_constraintTop_toBottomOf="@id/part_list_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#6B6B6B"
            tools:text="68 songs"
    />

</android.support.constraint.ConstraintLayout>